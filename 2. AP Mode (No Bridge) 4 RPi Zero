(NOT RECOMMENDED - EDIT SETTINGS WITH RPI-IMAGER INSTEAD FOR AN EASY APPROACH!)

sudo apt install hostapd dnsmasq
sudo DEBIAN_FRONTEND=noninteractive apt install -y netfilter-persistent iptables-persistent

sudo systemctl unmask hostapd

sudo nano /etc/dhcpcd.conf
interface wlan0
    static ip_address=192.168.4.1/24
    nohook wpa_supplicant
    
sudo nano /etc/sysctl.d/routed-ap.conf
# Enable IPv4 routing
net.ipv4.ip_forward=1

sudo iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
sudo netfilter-persistent save

sudo mv /etc/dnsmasq.conf /etc/dnsmasq.conf.orig
sudo nano /etc/dnsmasq.conf
interface=wlan0
dhcp-range=192.168.4.2,192.168.4.20,255.255.255.0,24h
domain=wlan
address=/ctos.3g/192.168.4.1

sudo nano /etc/hostapd/hostapd.conf
country_code=BR
interface=wlan0
hw_mode=g
channel=7
macaddr_acl=0
auth_algs=1
ignore_broadcast_ssid=0
wpa=2
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP
ssid=ctOS 3G
wpa_passphrase=5V06auso

sudo systemctl enable hostapd

sudo systemctl reboot

# Based on: https://www.raspberrypi.com/documentation//computers/configuration.html#setting-up-a-routed-wireless-access-point
