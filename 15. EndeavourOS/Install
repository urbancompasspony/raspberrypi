
curl -sSL https://raw.githubusercontent.com/urbancompasspony/bashrc/main/install.sh | bash

sudo eos-rankmirrors --verbose
yay -Syyu

# pacman
sudo pacman -S docker-buildx docker \
filelight smb4k plasma-disks kolourpaint granatier okteta krename timeshift kget gnome-nettool \
iperf traceroute arp-scan speedtest-cli samba sshpass curl rclone openvpn qbittorrent nmap yt-dlp \
cronie zip unzip dialog btrfs-progs cifs-utils inxi btop iotop cmatrix parallel rdesktop rpi-imager webp-pixbuf-loader gthumb bash-language-server \
torbrowser-launcher tree gparted gnome-disk-utility  audacity thunderbird libreoffice libreoffice-fresh-pt-br thunderbird-i18n-pt-br vlc kpat gimp remmina \
luanti terminator distrobox

yay -S brave-bin

Extra: v4l2loopback-dkms

sudo wget https://github.com/mikefarah/yq/releases/latest/download/yq_linux_amd64 -O /usr/local/bin/yq
sudo chmod +x /usr/local/bin/yq

sudo nano /etc/sddm.conf.d/virtualkbd.conf
[General]
InputMethod=qtvirtualkeyboard

sudo pacman -S vulkan-broadcom

sudo pacman -S discover flatpak fwupd packagekit-qt6
sudo flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
sudo flatpak remote-ls --arch=aarch64

    sudo dd if=/dev/zero of=/swapfile bs=1k count=4000000
    sudo chmod 0600 /swapfile
    sudo mkswap /swapfile
    sudo swapon /swapfile
    echo "/swapfile none swap sw 0 0" | sudo tee -a /etc/fstab

    echo -e "kernel.sysrq=1" | sudo tee /etc/sysctl.d/10-magic-sysrq.conf
    echo -e "fs.inotify.max_user_watches=204800
vm.swappiness=10
vm.panic_on_oom=1
kernel.panic=5
#net.ipv4.ip_forward=1
#net.ipv6.conf.all.disable_ipv6=1
#net.ipv6.conf.default.disable_ipv6=1" | sudo tee /etc/sysctl.d/99-sysctl.conf

sudo sysctl --system
