apiVersion: v1
kind: ConfigMap
metadata:
  name: pihole-config
data:
  TZ: "America/New_York"  # Ajuste para seu fuso hor√°rio
  WEBPASSWORD: "senhasegura"  # Altere esta senha
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: pihole
spec:
  replicas: 2
  selector:
    matchLabels:
      app: pihole
  template:
    metadata:
      labels:
        app: pihole
    spec:
      containers:
      - name: pihole
        image: pihole/pihole:latest
        resources:
          requests:
            memory: "150Mi"
            cpu: "100m"
          limits:
            memory: "250Mi"
            cpu: "200m"
        ports:
        - containerPort: 53
          name: dns-tcp
          protocol: TCP
        - containerPort: 53
          name: dns-udp
          protocol: UDP
        - containerPort: 67
          name: dhcp
          protocol: UDP
        - containerPort: 80
          name: http
        - containerPort: 443
          name: https
        envFrom:
        - configMapRef:
            name: pihole-config
        volumeMounts:
        - name: pihole-data
          mountPath: /etc/pihole
        readinessProbe:
          httpGet:
            path: /admin/
            port: 80
          initialDelaySeconds: 15
          periodSeconds: 10
        livenessProbe:
          httpGet:
            path: /admin/
            port: 80
          initialDelaySeconds: 30
          periodSeconds: 30
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: app
                  operator: In
                  values:
                  - pihole
              topologyKey: "kubernetes.io/hostname"
      volumes:
      - name: pihole-data
        persistentVolumeClaim:
          claimName: pihole-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: pihole
  annotations:
    metallb.universe.tf/allow-shared-ip: "pihole-vip"
spec:
  selector:
    app: pihole
  ports:
  - name: dns-tcp
    port: 53
    protocol: TCP
  - name: dns-udp
    port: 53
    protocol: UDP
  - name: dhcp
    port: 67
    protocol: UDP
  - name: http
    port: 80
  - name: https
    port: 443
  type: LoadBalancer
  loadBalancerIP: 192.168.1.240
